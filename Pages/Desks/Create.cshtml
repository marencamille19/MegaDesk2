@page
@model MegaDesk2.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Desk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Desk.CustomerName" class="control-label"></label>
                <input asp-for="Desk.CustomerName" class="form-control" />
                <span asp-validation-for="Desk.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.NumDrawers" class="control-label"></label>
                <input asp-for="Desk.NumDrawers" class="form-control" />
                <span asp-validation-for="Desk.NumDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Shipping" class="control-label"></label>
                <select asp-for="Desk.Shipping" class="form-control">
                    <option value="3day">3-Day</option>
                    <option value="5day">5-Day</option>
                    <option value="7day">7-Day</option>
                    <option value="regular">Normal Shipping</option>
                </select>
                <span asp-validation-for="Desk.Shipping" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Material" class="control-label"></label>
                <select asp-for="Desk.Material" class="form-control">
                    <option value="option">Choose an Option</option>
                    <option value="laminate">Laminate</option>
                    <option value="oak">Oak</option>
                    <option value="rosewood">Rosewood</option>
                    <option value="veneer">Veneer</option>
                    <option value="pine">Pine</option>
                </select>
                <span asp-validation-for="Desk.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.QuoteDate" class="control-label"></label>
                <input asp-for="Desk.QuoteDate" class="form-control" />
                <span asp-validation-for="Desk.QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Total" class="control-label"></label>
                <input asp-for="Desk.Total" class="form-control" />
                <span asp-validation-for="Desk.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
